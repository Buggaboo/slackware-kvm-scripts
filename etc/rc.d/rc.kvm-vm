#!/bin/sh

MODULES="kvm kvm-amd virtio virtio_balloon virtio_pci virtio_rng"

# don't change
MODPROBE=$(which modprobe)
RMMOD=$(which rmmod)

kvm_start () {
  for m in $MODULES; do
    $MODPROBE $m
  done
}

kvm_stop () {
  for m in $MODULES; do
    $RMMOD $m
  done
}

case "$1" in
'start')
  kvm_start
  ;;
'stop')
  kvm_stop
  ;;
'restart')
  kvm_restart
  ;;
*)
  echo "usage $0 start|stop|restart"
esac


