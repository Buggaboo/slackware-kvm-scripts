#!/bin/sh

kvm_start () { 
  modprobe kvm
  modprobe kvm-amd
  modprobe virtio
  modprobe virtio_balloon
  modprobe virtio_pci
  modprobe virtio_ring
}

kvm_stop () {
  rmmod kvm-amd
  rmmod kvm
  rmmod virtio_balloon
  rmmod virtio_pci
  rmmod virtio_rng
  rmmod virtio
}

case "$1" in
'start')
  kvm_start
  ;;
'stop')
  kvm_stop
  ;;
'restart')
  kvm_restart
  ;;
*)
  echo "usage $0 start|stop|restart"
esac


